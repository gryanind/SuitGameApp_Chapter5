<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".ui.menu.MenuGameActivity">

    <TextView
        android:id="@+id/tv_menu_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        tools:text="Hello Gryan !!! \n Choose your Opponent"/>

    <ImageView
        android:id="@+id/iv_menu_vs_player"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_landing_page1"
        android:layout_marginTop="36dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_menu_game"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/iv_menu_vs_computer"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_landing_page2"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/tv_player_vs_player"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_player_vs_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_player_vs_player"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@id/iv_menu_vs_computer"
        app:layout_constraintTop_toBottomOf="@id/iv_menu_vs_player"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_player_vs_computer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_player_vs_computer"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textAllCaps="true"
        app:layout_constraintTop_toBottomOf="@id/iv_menu_vs_computer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>